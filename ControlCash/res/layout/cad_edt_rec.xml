<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget31"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


	<TableLayout android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_width="fill_parent">
		<TableRow android:orientation="horizontal"
			android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="fill_parent">
			<TextView android:layout_height="wrap_content" android:text="Nome" android:layout_width="wrap_content">
			</TextView>
			<EditText android:id="@+id/nome" android:layout_height="wrap_content"
				android:textSize="18sp" android:layout_width="wrap_content">
			</EditText>
		</TableRow>
		<TableRow android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Valor">
			</TextView>
			<EditText android:id="@+id/valor" android:layout_height="wrap_content"
				android:textSize="18sp" android:layout_width="wrap_content" android:inputType="numberDecimal">
			</EditText>
		</TableRow>
		<TableRow android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
			<TextView android:layout_width="wrap_content" android:text="Categoria"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical">
			</TextView>
			<Spinner android:layout_height="wrap_content" android:id="@+id/categoria" android:layout_width="wrap_content"></Spinner>
		</TableRow>
	
		<TableRow android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="wrap_content">
		  <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Data">
            </TextView>
			<DatePicker android:layout_height="wrap_content"
				android:id="@+id/date" android:layout_width="wrap_content"></DatePicker>
		</TableRow>



	</TableLayout>


	<Button android:id="@+id/cadastrar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/add_receita"/>


</LinearLayout>
