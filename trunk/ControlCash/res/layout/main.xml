<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget69"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<Button android:id="@+id/btnRec" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="1px"
		android:text="Receitas" android:gravity="center"
		android:layout_gravity="center_horizontal">
	</Button>
	<Button android:id="@+id/btnDesp" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="1px"
		android:text="Despesas">
	</Button>
	<Button android:id="@+id/btnCat" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="1px"
		android:text="Categoria" android:layout_gravity="center_horizontal">
	</Button>
	<!-- Linha -->
	<View android:layout_width="fill_parent" android:layout_height="2dip" android:background="#FF909090" />
	
	<TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout1"
		android:stretchColumns="1" android:layout_height="wrap_content">
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/saldo" android:layout_width="wrap_content"
				android:textSize="18dp" android:layout_height="wrap_content"></TextView>
			<TextView android:textSize="18dp" android:textColor="#00BFFF"
				android:text="TextView" android:id="@+id/saldo"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_gravity="right"></TextView>
		</TableRow>
	</TableLayout>
</LinearLayout>
